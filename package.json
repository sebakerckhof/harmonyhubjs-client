{
  "name": "harmonyhubjs-client",
  "description": "harmonyhubjs-client is a Node.JS library which allows you to interact with your Logitech Harmony Hub.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/swissmanu/harmonyhubjs-client.git"
  },
  "keywords": [
    "logitech",
    "harmony",
    "hub",
    "remote",
    "api"
  ],
  "author": "Manuel Alabor <manuel@alabor.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/swissmanu/harmonyhubjs-client/issues"
  },
  "engines": {
    "npm": ">=3.0.0"
  },
  "dependencies": {
    "@std/esm": "^0.12.1",
    "@xmpp/xml": "^0.3.0",
    "debug": "^2.1.0",
    "ltx": "https://github.com/swissmanu/ltx.git#cdata-for-ltx-parser",
    "node-fetch": "^1.7.3",
    "node-xmpp-client": "3.0.0"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^1.1.6",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "semantic-release": "^4.3.5"
  },
  "scripts": {
    "lint": "eslint .",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "rules": {
      "no-console": "off",
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true
        }
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
